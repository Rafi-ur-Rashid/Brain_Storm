<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rf.puzzle">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/my_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".puzzleActivity"
            android:label="@string/Puzzle"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".OptionActivity"
            android:label="@string/title_activity_option"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".num_pyramidActivity"
            android:label="@string/title_activity_num_pyramid"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Short_term_memoryActivity"
            android:label="@string/title_activity_short_term_memory"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".descriptionDifficultyActivity"
            android:label="@string/title_activity_description_difficulty"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".highScoreActivity"
            android:label="@string/title_activity_high_score"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>